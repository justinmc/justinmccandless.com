<?php

    $counter = $this->dbJmc->numRows("dat_entries") - 1;
    while ($counter >= 0)
    {
		$color = "light";
		if ($counter % 2)
			$color = "dark";

        $DATA = $this->dbJmc->getRow("dat_entries", $counter);
        echo "      <tr class = \"$color\">";
        echo "      <td>";
        echo ($DATA['id'] + 1);
        echo "      </td>\n";																		// Entry
        echo "      <td><a href = \"index.php?entry=" . ($DATA['id'] + 1) . "\"";
        echo ($DATA['id'] + 1);
        echo ".php\">";   
        echo $DATA['title'];
        echo "      </a></td>\n";																	// Title
        echo "      <td>";
        echo $this->dateMacHum($DATA['date']);
        echo "      </td>\n";																		// Date Posted
        echo "      </tr>\n";
        $counter--;
    }
 
?>
      </table>


<?php 

for ($count = 0; $count < $this->dbJmc->numRows("dat_tags"); $count++)
{	$DATA = $this->dbJmc->getRow("dat_tags", $count);
	echo '<a href = "' . $this->rootUrl . '/tags.php?tag=' . $DATA["tag"] . '">' . $DATA["tag"] . '</a><br>' . "\n";
}
?>

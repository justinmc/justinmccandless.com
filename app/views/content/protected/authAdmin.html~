		<h2>New Entry</h2>
<?php

$entry = $_REQUEST["entry"];
$name = $_REQUEST["name"];

if ($name != "")
{

	$date = $_REQUEST["date"];
	$entry = $_REQUEST["entry"];
	$id = $this->dbJmc->numRows('dat_entries');

	$entry = str_replace("'", "\'", $entry);

	$query = "INSERT INTO dat_entries VALUES ($id, '$name', '$date', 0, '$entry');";

	$this->dbJmc->query($query);

	echo "<b style = \"color: green;\">New Post Succeeded!</b>\n";
}
if ($entry != "")
{
	$DATA = $this->dbJmc->getRow("dat_entries", 32); //($entry - 1));
}

?>
		<br><br>
		<form method = "post" action = "<?php echo $this->rootUrl; ?>/admin.php">
		Name:<br>
		<input type = "text" id = "date" name = "name" value = "">
		<br><br>
		Date:<br>
		<input type = "text" id = "date" name = "date" value = "<?php echo date('Y-m-d H:i:s'); ?>">
		<br><br>
		Entry:<br>
		<textarea class="ckeditor" cols="80" name="entry" rows="10"><?php echo $DATA["entry"]; ?></textarea>
		<br><br>
        <input type = "submit" value = "Submit">
 		</form>
